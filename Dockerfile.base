FROM openjdk:8-jre-slim
LABEL maintainer="hey@bpaulino.com"

RUN apt update
RUN apt install wget postgresql-client ca-certificates bash curl jq tar
# Install SBT
RUN export PATH="/usr/local/sbt/bin:$PATH" \
  && mkdir -p "/usr/local/sbt" \
  && wget -qO - --no-check-certificate "https://piccolo.link/sbt-1.3.10.tgz" | tar xz -C /usr/local/sbt --strip-components=1 \
  && sbt sbtVersion

ENV PATH "/usr/local/sbt/bin:$PATH"