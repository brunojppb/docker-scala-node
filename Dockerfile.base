FROM openjdk:8u292
LABEL maintainer="hey@bpaulino.com"

ARG SBT_VERSION=1.5.5

# Install sbt
RUN \
  mkdir /working/ && \
  cd /working/ && \
  curl -L -o sbt-$SBT_VERSION.deb https://repo.scala-sbt.org/scalasbt/debian/sbt-$SBT_VERSION.deb && \
  dpkg -i sbt-$SBT_VERSION.deb && \
  rm sbt-$SBT_VERSION.deb && \
  apt-get update && \
  apt-get install wget postgresql-client ca-certificates sbt -y && \
  cd && \
  rm -r /working/ && \
  sbt sbtVersion
